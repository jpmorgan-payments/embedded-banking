
<plugin>
  <groupId>org.openapitools</groupId>
  <artifactId>openapi-generator-maven-plugin</artifactId>
  <version>${openapi-generator-maven-plugin.version}</version>
  <configuration>
    <generatorName>java</generatorName>
    <output>${project.build.directory}/generated-sources/ep-sdk</output>
    <apiPackage>net.jpmchase.architecture.api</apiPackage>
    <groupId>net.jpmchase.architecture</groupId>
    <artifactId>ep-sdk</artifactId>
    <artifactVersion>${version}</artifactVersion>
    <library>resttemplate</library>
    <generateApiTests>false</generateApiTests>
    <generateModelTests>false</generateModelTests>
    <openapiGeneratorIgnoreList>.travis.yml,gradle/**,.github/**,gradle*,*.gradle,git_push.sh,src/test/**
    </openapiGeneratorIgnoreList>
    <configOptions>
      <useJakartaEe>true</useJakartaEe>
      <useSingleRequestParameter>true</useSingleRequestParameter>
      <generateBuilders>true</generateBuilders>
      <dateLibrary>java8</dateLibrary>
      <additionalModelTypeAnnotations>@JsonInclude(value = JsonInclude.Include.NON_EMPTY)
      </additionalModelTypeAnnotations>
      <useOneOfInterfaces>true</useOneOfInterfaces>
    </configOptions>
    <typeMappings>
      <typeMapping>Float=java.math.BigDecimal</typeMapping>
      <typeMapping>Double=java.math.BigDecimal</typeMapping>
    </typeMappings>
  </configuration>
  <executions>
    <execution>
      <id>embedded-payments-1.0.9</id>
      <goals>
        <goal>generate</goal>
      </goals>
      <configuration>
        <inputSpec>${project.basedir}/OAS/embedded-payments-1.0.9.yaml</inputSpec>
        <modelPackage>net.jpmchase.architecture.model.epv1</modelPackage>
      </configuration>
    </execution>
    <execution>
      <id>embedded-payments-2.0.9</id>
      <goals>
        <goal>generate</goal>
      </goals>
      <configuration>
        <inputSpec>${project.basedir}/OAS/embedded-payments-2.0.9.yaml</inputSpec>
        <modelPackage>net.jpmchase.architecture.model.epv2</modelPackage>
      </configuration>
    </execution>
    <execution>
      <id>onboarding-1.0.8</id>
      <goals>
        <goal>generate</goal>
      </goals>
      <configuration>
        <inputSpec>${project.basedir}/OAS/onboarding-1.0.8.yaml</inputSpec>
        <modelPackage>net.jpmchase.architecture.model.dov1</modelPackage>
      </configuration>
    </execution>
  </executions>
</plugin>